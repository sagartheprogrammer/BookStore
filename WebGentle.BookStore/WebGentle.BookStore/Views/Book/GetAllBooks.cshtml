@model IEnumerable<BookModel>

@*@model IEnumerable<WebGentle.BookStore.Model.BookModel>*@

@{ 
    ViewData["title"] = "All Books";
}

<div class="container">
    <h3>Here are all Books</h3>
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http:"></svg>
                    <div class="card-body">
                        <h3 class="card-title">@book.Title</h3>
                        <p class="card-text">@book.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                @*<a asp-route="book/getabook/@book.Id" class="btn btn-sm btn-outline-secondary">View Details</a>*@
                                <a href="/book/getabook/@book.Id" class="btn btn-sm btn-outline-secondary">View Details</a>
                            </div>
                            <small class="text-muted">@book.Author</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


